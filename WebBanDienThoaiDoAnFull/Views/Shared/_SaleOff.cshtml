@model IEnumerable<WebBanDienThoaiDoAn.Models.Product>
<div class="nn-block">
    <div class="nn-megamenu-sidebar-title"><i class="glyphicon glyphicon-tags"></i><h2>Sale off</h2></div>
    @foreach (var p in Model)
    {
        <div class="nn-product-box">
            <a href="/Product/Detail/@p.Id">
                <img class="img-responsive" src="/Content/img/products/@p.Image" />
            </a>
            <div class="nn-product-box-descriptions">
                <h3 class="nn-product-box-name">
                    <a href="/Product/Detail/@p.Id">@p.Name</a>
                </h3>
                <div class="nn-product-box-price ">
                    <span class="">@Html.FormatValue(@p.UnitPrice,"{0:#,###}")</span>
                </div>
                <div class="nn-product-box-actions">
                    <button type="button" class="btn btn-default">
                        <span class="nn-color-white">Thêm vào giỏ hàng</span>
                    </button>

                </div>
            </div>
        </div>
    }
</div><!--end block sale off-->